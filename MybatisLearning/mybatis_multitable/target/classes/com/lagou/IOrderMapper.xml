<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lagou.mapper.IOrderMapper">

    <resultMap id="orderMap" type="com.lagou.pojo.Order">
        <result property="id" column="id"></result>
        <result property="orderTime" column="order_time"></result>
        <result property="total" column="total"></result>

        <association property="user" javaType="com.lagou.pojo.User">
            <result property="id" column="uid"></result>
            <result property="userName" column="username"></result>
        </association>
    </resultMap>


    <!--resultMap 收懂配置实体类与数据库的字段的映射关系-->
    <select id="findAllOrderAndUser" resultMap="orderMap">
         select * from orders o,user u where o.uid = u.id
    </select>
</mapper>